---
import Layout from "../../layouts/Layout.astro";
import { db } from "../../db";
import { rifas } from "../../db/schema";
import { RaffleCard } from "../../components/rifas/RaffleCard";
import { RaffleSection } from "../../components/rifas/RafleSection";

const rafflesList = await db.select().from(rifas);
const activeRaffles = rafflesList.filter(
  (r) => !r.fechaSorteo || new Date(r.fechaSorteo) > new Date()
);
const pastRaffles = rafflesList.filter(
  (r) => r.fechaSorteo && new Date(r.fechaSorteo) <= new Date()
